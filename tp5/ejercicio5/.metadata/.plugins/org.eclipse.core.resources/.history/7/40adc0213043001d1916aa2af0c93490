package ejercicio5;

public class DirectorTorta {

	public void hacerTortaCoco(TortaBuilder torta) {
      
		torta.setPaso1();
		torta.setPaso2();
		torta.setPaso3();
		torta.setPaso4();
	}
	
	public void hacerTortaVainilla(TortaBuilder torta) {
	      
		torta.setPaso1();
		torta.setPaso2();
		torta.setPaso3();
		torta.setPaso4();
	}
	
	public void hacerTortaPera(TortaBuilder torta) {
	      
		torta.setPaso1();
		torta.setPaso2();
		torta.setPaso3();
		torta.setPaso4();
	}

}
